<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PokeDisp">

    <ImageView
        android:id="@+id/desc_img"
        android:layout_width="130dp"
        android:layout_height="130dp"
        app:layout_constraintBottom_toTopOf="@+id/desc_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.044" />

    <TextView
        android:id="@+id/desc_name"
        android:layout_width="304dp"
        android:layout_height="47dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/desc_type"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/desc_img"
        app:layout_constraintVertical_bias="0.314" />

    <TextView
        android:id="@+id/desc_type"
        android:layout_width="304dp"
        android:layout_height="47dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/desc_ability"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/desc_name"
        app:layout_constraintVertical_bias="0.423" />

    <TextView
        android:id="@+id/desc_ability"
        android:layout_width="304dp"
        android:layout_height="47dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/desc_discription"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/desc_type"
        app:layout_constraintVertical_bias="0.528" />

    <TextView
        android:id="@+id/desc_discription"
        android:layout_width="304dp"
        android:layout_height="47dp"
        android:textSize="20sp"
        android:lines="3"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toTopOf="@+id/desc_height"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/desc_ability"
        app:layout_constraintVertical_bias="0.635" />

    <TextView
        android:id="@+id/desc_height"
        android:layout_width="304dp"
        android:layout_height="47dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/desc_weight"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/desc_discription"
        app:layout_constraintVertical_bias="0.757" />

    <TextView
        android:id="@+id/desc_weight"
        android:layout_width="304dp"
        android:layout_height="47dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/desc_height"
        app:layout_constraintVertical_bias="0.854" />

</androidx.constraintlayout.widget.ConstraintLayout>